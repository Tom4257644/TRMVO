            color: 0, 0, 0, 1   
            size_hint: (1, 0.6)  
            text_size: self.width, None 
            halign: 'left'  
            valign: 'middle'  

        Button:
            text: "Continue"
            background_normal: ''
            background_color: 0, 0.5, 0, 1   
            font_size: self.height * 0.5  
            size_hint: (0.5, 0.1)  
