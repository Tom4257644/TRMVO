            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                size_hint: (1, 0.2)
                Label:
                    text: "Email:"
                    font_size: self.height * 0.5
                    color: 0, 0, 0, 1   
                    size_hint: (0.3, 1)
                Label:
                    id: emailDB
                    text: "t@t.com"
                    font_size: self.height * 0.5
                    color: 0, 0, 0, 1   
                    size_hint: (0.7, 1)

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                size_hint: (1, 0.2)
                Label:
                    text: "Password:"
                    font_size: self.height * 0.5
