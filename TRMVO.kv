<AccountScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [50, 50, 50, 50]
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1   
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Account Details"
            font_size: self.height * 0.8
            bold: True
            color: 0, 0.5, 0, 1   
            size_hint: (1, 0.1)

        BoxLayout:
            orientation: 'vertical'
            spacing: 5
