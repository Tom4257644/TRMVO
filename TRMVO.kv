<Disclaimer>
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: [50, 50, 50, 50]
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1   
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Tom's Rental Model Version One"
            font_size: self.height * 0.4  
            bold: True
            color: 0, 0.5, 0, 1   
